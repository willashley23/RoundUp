{
  "manifest_version": 2,

  "name": "RoundUp",
  "description": "An add-on that opens up all of your frequently visited sites in different tabs.",
  "version": "1.0",
  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["./css/main.css"],
      "js": ["./js/main.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["./js/background.js"]
  },

  "browser_action": {
    "default_icon": "tab.png"
  }

}